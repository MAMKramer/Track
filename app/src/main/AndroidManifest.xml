<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="informatics.uk.ac.ed.track" >

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="informatics.uk.ac.ed.track.AlarmReceiver" />
        <receiver android:name="informatics.uk.ac.ed.track.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="informatics.uk.ac.ed.track.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" > <!-- remove activity from stack so user can't return to it -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.ResearcherSetup"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.StudyConfiguration"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.UserAccountSetup"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.SetupComplete"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoIntro"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoFreeText"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoMultiChoice_Single"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoMultiChoice_Multi"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoScale"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.UserLogin"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DemoScaleVertical"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.BriefingComplete"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="informatics.uk.ac.ed.track.DefaultActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
