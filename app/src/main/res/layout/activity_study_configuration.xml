<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:fab="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="informatics.uk.ac.ed.esm.StudyConfiguration">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_height="@dimen/title_height"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:title="@string/title_activity_study_configuration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_study_configuration"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/text_icons" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        style="@style/BodyLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:rowOrderPreserved="true"
            android:id="@+id/gridLayout"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_ic_event_grey_24dp"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/FormImage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_row="0"
                android:layout_column="1"
                android:nestedScrollingEnabled="false"
                style="@style/ListItem"
                android:id="@+id/lytStartDate"
                android:onClick="lytStartDate_onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/startDate"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/defaultDateFormat"
                    android:id="@+id/txtStartDate"
                    android:layout_below="@+id/textView7"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_row="1"
                    android:layout_column="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:id="@+id/divider1"
                android:layout_row="2"
                android:layout_column="1"
                android:theme="@style/HorizontalDivider"
                android:touchscreenBlocksFocus="true"
                android:gravity="fill_horizontal"
                style="@style/HorizontalDivider" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                style="@style/ListItem"
                android:layout_row="1"
                android:layout_column="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/duration"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_row="9"
                    android:layout_column="4" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout4"
                    android:layout_below="@+id/textView11"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_row="4"
                    android:layout_column="5">

                    <EditText
                        android:layout_width="@dimen/numeric_textview_width"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtDefaultDuration"
                        android:text="@string/defaultDuration"
                        android:layout_below="@+id/textView9"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_alignRight="@+id/textView9"
                        android:layout_alignEnd="@+id/textView9"
                        android:gravity="center"
                        android:layout_row="8"
                        android:layout_column="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/days"
                        android:id="@+id/textView10"
                        android:layout_alignBottom="@+id/txtDefaultDuration"
                        android:layout_toRightOf="@+id/txtDefaultDuration"
                        android:layout_toEndOf="@+id/txtDefaultDuration"
                        android:layout_row="7"
                        android:layout_column="4"
                        android:layout_weight="0.5" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_ic_alarm_grey_24dp"
                android:layout_below="@+id/divider1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/FormImage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    style="@style/ListItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/samplesPerDay"
                        android:id="@+id/textView11"
                        android:layout_below="@+id/divider1"
                        android:layout_toRightOf="@+id/imageView3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:layout_row="7"
                        android:layout_column="1" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="@dimen/numeric_textview_width"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText2"
                            android:text="@string/defaultSamplesPerDay"
                            android:layout_below="@+id/textView9"
                            android:layout_alignLeft="@+id/textView9"
                            android:layout_alignStart="@+id/textView9"
                            android:layout_alignRight="@+id/textView9"
                            android:layout_alignEnd="@+id/textView9"
                            android:gravity="center"
                            android:layout_row="6"
                            android:layout_column="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/samples"
                            android:id="@+id/textView13"
                            android:layout_alignBottom="@+id/editText2"
                            android:layout_toRightOf="@+id/editText2"
                            android:layout_toEndOf="@+id/editText2"
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:id="@+id/divider2"
                android:layout_row="4"
                android:layout_column="1"
                android:touchscreenBlocksFocus="false"
                style="@style/HorizontalDivider" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_ic_brightness_5_grey_24dp"
                android:layout_below="@+id/divider1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="5"
                android:layout_column="0"
                style="@style/FormImage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_row="5"
                android:layout_column="1"
                style="@style/ListItem"
                android:layout_height="72dp"
                android:layout_width="match_parent"
                android:onClick="lytStartTime_OnClick"
                android:id="@+id/lytStartTime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/dailyStartTime"
                    android:id="@+id/textView12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/defaultTimeFormat"
                    android:id="@+id/txtStartTime"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:id="@+id/divider3"
                android:layout_row="6"
                android:layout_column="1"
                style="@style/HorizontalDivider" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/ic_ic_brightness_3_grey_24dp"
                android:layout_below="@+id/divider1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="7"
                android:layout_column="0"
                style="@style/FormImage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_row="7"
                android:layout_column="1"
                style="@style/ListItem"
                android:onClick="lytEndTime_OnClick"
                android:id="@+id/lytEndTime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/dailyEndTime"
                    android:id="@+id/textView15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/defaultTimeFormat"
                    android:id="@+id/txtEndTime" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:id="@+id/divider4"
                android:layout_row="8"
                android:layout_column="1"
                style="@style/HorizontalDivider" />

        </GridLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_done_white_24dp"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/accent"
            fab:fab_colorRipple="@color/primary_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="btnNext_onClick" />

    </RelativeLayout>

</RelativeLayout>
