<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary"
    tools:context="informatics.uk.ac.ed.esm.util.DefaultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView android:id="@+id/fullscreen_content" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@color/text_icons"
            android:text="@string/noSurveyAvailable"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/noSurveyAvailableSubText"
            android:id="@+id/textView3"
            android:textColor="@color/primary_light"/>
    </LinearLayout>

</RelativeLayout>
